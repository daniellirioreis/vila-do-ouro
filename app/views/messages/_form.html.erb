<%= simple_form_for(@message) do |f| %>
	<%= f.hidden_field :user_id %>	
	<div class="row">
		<div class="col-lg-7">
			<%= f.input :title %>    			
		 </div>
	</div>
	<div class="row">
		<div class="col-lg-2">
			<%= f.input :type_message, collection: TypeMessage , input_html: {class: 'span12'} %>			
		</div>
	</div>


	<div class="row">
		<div class="col-lg-12">
		 	<%= f.input :description, input_html: { cols: 50, rows: 10 } %>
		</div>
	</div>		

	<div class="form-actions">
	  <%= f.button :submit, class: "btn btn-success" %>
	</div>

<% end %>
