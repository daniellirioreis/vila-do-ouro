<%= simple_form_for @message, :html => { :multipart => true }  do |f| %>
	<%= f.hidden_field :user_id %>	
	<div class="row">
	  <div class="col-md-7">
	  	<%= f.input :title %>    						
	  </div>
	</div>
	<div class="row">
	  <div class="col-md-3">
			<%= f.input :type_message, collection: TypeMessage , input_html: {class: 'span12'} %>			
	  </div>
	</div>

	<div class="row">
	  <div class="col-md-12">
		 	<%= f.input :description, input_html: { cols: 50, rows: 10 } %>
		</div>
	</div>
	<br>
	<div class="row">
	  <div class="col-md-7">
	  	<%= f.input :path_file %>    						
	  </div>
	</div>
	
	<br>
	<div class="form-actions">
	  <%= f.button :submit, class: "btn btn-success" %>
	</div>

<% end %>
